#! /usr/bin/bash

if [ -z "$1" ]; then
  echo "No task name name argument supplied eg ./bin/ecs/connect-to-service 56345d4a03f041d890ab489be9f288e5 backend-flask"
  exit 1
fi

if [ -z "$2" ]; then
  echo "No container name name argument supplied eg ./bin/ecs/connect-to-service 56345d4a03f041d890ab489be9f288e5 backend-flask"
  exit 1
fi

TASK_ID=$1
CONTAINER_NAME=$2

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container $CONTAINER_NAME \
--command "/bin/bash" \
--interactive